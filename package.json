{
  "name": "@lasmedia/dynamic-config",
  "version": "1.0.7",
  "type": "module",
  "license": "MIT",
  "author": "lasmedia",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/las-media/dynamic-config"
  },
  "scripts": {
    "build": "rollup -c --configPlugin typescript",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "prettier": "prettier . --config ./prettier.config.mjs --write",
    "eslint": "eslint . --config ./eslint.config.mjs --fix",
    "prepare": "husky",
    "lint": "yarn eslint && yarn prettier",
    "lintstaged": "lint-staged -c ./lint-staged.config.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite.es.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0",
    "zod": "^4.0.0"
  }
}
